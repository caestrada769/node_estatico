{{> header }}

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-12">
          <h1 class="m-0 text-center">Crear Categoría</h1>
        </div>
      </div>
    </div>
  </div>
  <section class="content">
    <div class="container-fluid">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <form action="" method="POST">
                <div class="form-group">
                  <label for="nombre">Nombre</label>
                  <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Ingrese el nombre de la categoría" required>
                  <span id="nombreError" class="erroresFormulario"></span>
                </div>
                <div class="form-group">
                  <label for="descripcion">Descripción</label>
                  <textarea name="descripcion" id="descripcion" class="form-control" placeholder="Ingrese la descripción de la categoría" required></textarea>
                  <span id="descripcionError" class="erroresFormulario"></span>
                </div>
                <div class="form-group text-center">
                  <button id="btnCrearCategoria" type="button" class="btn btn-primary">Crear</button>
                  <a href="/categorias"><button type="button" class="btn btn-secondary">Cancelar</button></a>
                </div>
                <script src="js/funcionesCategorias.js"></script>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

{{> footer }}
