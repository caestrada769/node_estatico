{{> header }}



 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-12 text-center">
            <h1>Orden de producción</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <button id="btnActualizarOrdenes" type="button" class="btn btn-dark" style="width: 3%"><i class="bi bi-arrow-clockwise"></i></button>
      <br><br>

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
        <div class="card-body p-0">
          <table class="table table-striped Categorias">
              <thead>
                  <tr>
                      <th style="width: 3%">
                          Área
                      </th>
                      <th style="width: 5%">
                          Producto
                      </th>
                      <th style="width: 3%" class="text-center">
                          Cantidad
                      </th>
                      <th style="width: 10%">
                          Última actualización
                      </th>
                      <th style="width: 5%" class="text">
                          Estado
                      </th>
                      <th style="width: 7%" class="text">
                          Fecha de entrega
                      </th>
                      <th style="width: 8%" class="text-center">
                          Acciones
                      </th>
                  </tr>
              </thead>
              <tbody id="contenido">

              </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->


    <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar Orden de Producción</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="" method="POST">
                <div class="form-group">
                  <label for="nombre">Área</label>
                  <input type="text" name="area" id="area" class="form-control" disabled required>
                  <span id="nombreError" class="erroresFormulario"></span>
                </div>
                <div class="form-group">
                  <label for="nombre">Producto</label>
                  <input type="text" name="producto" id="producto" class="form-control" disabled required>
                  <span id="nombreError" class="erroresFormulario"></span>
                </div>
                <div class="form-group">
                  <label for="nombre">Cantidad</label>
                  <input type="text" name="cantidad" id="cantidad" class="form-control" disabled required>
                  <span id="nombreError" class="erroresFormulario"></span>
                </div>
                <div class="form-group">
                  <label for="nombre">Última actualización</label>
                  <input type="text" name="fecha_actualizacion" id="fecha_actualizacion" class="form-control" disabled required>
                  <span id="nombreError" class="erroresFormulario"></span>
                </div>
                <div class="form-group">
                  <label for="estado">Estado</label>
                  <select id="estado" class="custom-select">
                    <option value="En espera" disabled selected>En espera</option>
                    <option value="En preparacion">En preparación</option>
                    <option value="Terminado">Terminado</option>
                  </select>
                  <span id="estadoError" class="erroresFormulario"></span>
                </div>
                <div class="form-group">
                  <label for="nombre">Fecha de entrega</label>
                  <input type="text" name="fecha_entrega" id="fecha_entrega" class="form-control" disabled required>
                  <span id="nombreError" class="erroresFormulario"></span>
                </div>
                <input type="hidden" id="idProduccion" value="">
              </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button id="btnActualizarEstadoProduccion" type="button" class="btn btn-primary">Actualizar</button>
      </div>
    </div>
  </div>
</div>

  </div>
  <!-- /.content-wrapper -->

  <script src="js/funcionesProducciones.js"></script>
  <script> listarDatos() </script>


