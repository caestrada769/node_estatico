{{> header}}

 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-12 text-center">
            <h1>Pedidos</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <a class="btn btn-info btn-sm" href="/crearPedido">
              <i class="fas fa-new-alt">
              </i>
              Crear Pedido
          </a>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped Categorias">
              <thead>
                  <tr>
                      <th style="width: 20%">
                          Nombre Cliente
                      </th>
                      <th style="width: 20%">
                          Nombre Recibe
                      </th>
                      <th style="width: 20%">
                          Telefono
                      </th>
                      <th style="width: 10%">
                          Direccion
                      </th>
                      <th style="width: 10%">
                          Cantidad
                      </th>
                      <th style="width: 20%">
                          Fecha Entrega
                      </th>                      
                      <th style="width: 8%" class="text-center">
                          Acciones
                      </th>
                  </tr>
              </thead>
              <tbody id="contenido">

              </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  
